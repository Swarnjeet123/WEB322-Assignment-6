<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
		<a href="/categories/add" class="btn btn-success pull-right">Add
Category</a>
        <hr />

        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                         <th>Category&nbsp;ID</th>
                        <th>Category&nbsp;Name</th>
						<th>
                    </tr>
                </thead>
                <tbody>
                {{#each categories}}
                    <tr>
                        <td><a href="/categories?category={{id}}">{{id}}</a></td>
                        <td><a href="/categories?category={{id}}">{{id}}</a></td>
                        
						<td><a class="btn btn-danger" href="categories/delete/categoryid={{id}}"></a></td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless categories}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}
    </div>
</div>